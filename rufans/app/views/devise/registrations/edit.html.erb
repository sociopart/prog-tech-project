<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>  
  <div class="container">
    <h1>Edit Profile</h1>
    <hr>
  <div class="row">
      <!-- left column -->
      <div class="col-md-3">
        <div class="text-center">
          <%= image_tag(current_user.avatar, style:"width:150px; height: 150px; border-radius:100%") if current_user.avatar.attached? %>
          <h6>Upload a different photo...</h6>
          <div class="form-control">
            <%= f.label :avatar %><br />
            <%= f.file_field :avatar %>
        </div>
      </div>
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        <h3>Personal info</h3>
      
        <form class="form-horizontal" role="form">
          <div class="form-group">
            <label class="col-lg-3 control-label">Name:</label>
            <div class="col-lg-8">
              <div class="field">
                <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
              </div>
            </div>

          <div class="form-group">
            <label class="col-lg-3 control-label">@tag:</label>
            <div class="col-lg-8">
              <div class="field">
                <%= f.text_field :user_tag, autofocus: true, autocomplete: "user_tag" %>
              </div>
            </div>

          <div class="form-group">
            <label class="col-lg-3 control-label">Nickname:</label>
            <div class="col-lg-8">
              <div class="field">
                <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
              </div>
            </div>

          <div class="form-group">
            <label class="col-lg-3 control-label">Email:</label>
              <div class="col-lg-8">
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :current_password, class: "col-md-3 control-label" %> <i>(we need your current password to confirm your changes)</i><br />
            <div class="col-md-8">
              <%= f.password_field :current_password, autocomplete: "current-password" %>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="btn btn-primary">
              <%= f.submit "Save Changes" %>
            </div>
          </div>
        </form>
      </div>
  </div>
  </div>
  <hr>
  <%= link_to "Back", :back %>
<% end %>