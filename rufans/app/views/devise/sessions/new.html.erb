<div class="mask d-flex h-100 gradient-custom-3">
  <div class="container h-100">
    <div class="row-md-1 d-flex h-100 align-items-center justify-content-center">
      <div class="col-12 col-md-9 col-lg-7 col-xl-6">
        <div class="card rounded-corners align-middle">
          <div class="card-body p-5">
            <h2 class="text-center mb-5 text-big">Авторизация</h2>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-outline mb-4">
                <%= f.email_field :email, 
                    class: "form-label form-control form-control-lg", 
                    autofocus: true, autocomplete: "email", 
                    placeholder: 'Адрес электронной почты или юзернейм' 
                %>
              </div>

              <div class="form-outline mb-4">
                <%= f.password_field :password, 
                    class: "form-label form-control form-control-lg", 
                    autocomplete: "new-password", 
                    autocomplete: "current-password", 
                    placeholder: 'Пароль' 
                %>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="row">
                  <div class="col-sm-6 col-md-6 field">
                    <%= f.check_box :remember_me %>
                    <%= f.label 'Запомнить' %>
                  </div>
                  <div class="col-sm-6 col-md-6 text-end">
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to "Забыли пароль?", new_password_path(resource_name) %><br />
                    <% end %>
                  </div>
                </div>
              <% end %>

              <div class="actions d-flex justify-content-center mt-3">
                <%= f.submit "Войти",  class: "btn btn-main btn-big" %>
              </div>
              <div class="register mt-3 text-medium text-main-accent">
                <h7>Нет аккаунта?</h7>
                <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                  <%= link_to "Зарегистрируйтесь", new_registration_path(resource_name) %><br />
                <% end %>
              </div>
              <!--<%= render "devise/shared/links" %>-->
              <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>