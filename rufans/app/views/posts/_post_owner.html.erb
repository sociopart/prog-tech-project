<div class="card gedf-card mb-4" id="<%= dom_id(post) %>">
  <div class="card-header post-card-header">
    <div class="d-flex justify-content-between align-items-center">
      <div class="d-flex justify-content-between align-items-center">
        <div class="mr-2 mt-2 post-avatar">
          <% if post.user.avatar.attached? %>
            <%= image_tag(post.user.avatar, class: 'rounded-circle', alt: '') %>
          <% else %>
            <img class="rounded-circle" src="https://picsum.photos/50/50" alt="" width="45">
          <% end %>
        </div>
        <div class="mx-3">
          <div class="h7"><%= link_to post.user.name, user_path(post.user.user_tag), class: 'text-medium text-main-accent'%> </div>
          <div class="row-12">
            <div class="col h5 m-0 text-mute text-medium"><%= post.user.user_tag %> </div>
            <div class="col text-muted h7 mb-2"> <i class="fa fa-clock-o"></i>
            <%= link_to "10 min ago", post %>
            </div>
          </div>
          </div>
      </div>
      <div>
        <div class="dropdown">
          <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-ellipsis-h"></i>
          </button>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
            <div class="h6 dropdown-header">Configuration</div>
            <a class="dropdown-item" href="#">Save</a>
            <a class="dropdown-item" href="#">Hide</a>
            <a class="dropdown-item" href="#">Report</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body">
    <p class="card-text">
      <%= post.body %>
    </p>
    <% post.images.each do |image| %>
      <%= image_tag(image, style:"width:300px; height: auto")%><br/>
    <% end %>
  </div>
  <div class="card-footer">
    <%= render 'likes/private_button', 
                post: post, 
                like_status: like_status %>
    <a href="#" class="card-link"><i class="fa fa-comment"></i> Comment</a>
    <a href="#" class="card-link"><i class="fa fa-mail-forward"></i> Share </a>

    
      <%= button_to "Edit this post", edit_post_path(post), method: :post %> |
      <%= button_to "Destroy this post", post, method: :delete %>
    
      <%= render 'comments/form',  parent: nil ,comment: Comment.new, post: post %>
      <%= render partial: 'comments/comment', collection: post.comments.where(parent_id: nil).order(created_at: :desc), locals: { user: user }%>
  
  </div>
</div>